@page "{id:int}"
@model CrudRazorApp.Pages.Autos.EditModel

<h1>Editar Auto</h1>

<form method="post">
  <input type="hidden" asp-for="Auto.Id" />
  <div><label>Marca</label><input asp-for="Auto.Marca" /></div>
  <div><label>Modelo</label><input asp-for="Auto.Modelo" /></div>
  <div><label>Año</label><input asp-for="Auto.Anio" type="number" /></div>
  <div><label>Color</label><input asp-for="Auto.Color" /></div>
  <div><label>Placa</label><input asp-for="Auto.Placa" /></div>
  <button type="submit">Guardar</button>
  <a asp-page="./Index">Cancelar</a>
</form>