@page "{id:int}"
@model CrudRazorApp.Pages.Productos.DetailsModel
@{
    ViewData["Title"] = "Detalles del Producto";
}
<h1 class="mb-4">Detalles del Producto</h1>
<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Producto.Nombre</dd>
    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">@Model.Producto.Precio</dd>
</dl>
<p>
    <a asp-page="Edit" asp-route-id="@Model.Producto.Id" class="btn btn-primary">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Volver</a>
</p>
